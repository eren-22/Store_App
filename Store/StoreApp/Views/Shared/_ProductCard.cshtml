@model Product

<div class="col-sm-12 col-md-4 my-2">

	<div class="card" style="width: 18rem;">
		<div class="card-header text-center">@Model.ProductName</div>
		<img src="@Model?.ImageUrl" class="card-img-top" alt="...">
		<div class="card-body">

			<div class="card-text">
				<div class="text-danger text-center lead p-2 rounded-2">
					<strong>@Model?.Price.ToString("c2")</strong>
				</div>
			</div>

			<p class="card-text">@Model?.Summary</p>

			<div class="d-flex justify-content-center">

				<div class="btn btn-group">
					<form id="@Model.ProductId" asp-page="/cart" method="post">
						<input type="hidden" asp-for="ProductId" />
						<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
						<button type="submit" class="btn btn-outline-secondary">
							<i class="fa fa-cart-plus"></i>
						</button>
						<a asp-controller="Product" asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-outline-secondary">
							<i class="fa-solid fa-arrow-right"></i>
							Details
						</a>
					</form>
				</div>
			</div>
		</div>
	</div>
	</div>
